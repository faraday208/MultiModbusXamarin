<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ModbusXamarinDeneme.MainPage">

    <StackLayout>
        <Label x:Name="lblreturn"></Label>

        <StackLayout Orientation="Horizontal">
            <Entry Keyboard="Numeric" x:Name="entryAddress">
            </Entry>
            <Entry Keyboard="Numeric" x:Name="entryValue">
            </Entry>
            <Button Clicked="Button_Clicked">
            </Button>
        </StackLayout>
        <Label x:Name="lblWriteReturn"></Label>
    </StackLayout>
</ContentPage>